@model Squawkings.Controllers.LogonViewModel
@{
    ViewBag.Title = "Logon.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="logon-banner">
</div>
<div id="logon-container">
    @Html.BeginForm("index", "logon", FormMethod.Post) {
    @Html.AntiForgeryToken("AntiForgeryTokenSalt")
    @Html.HiddenFor(x=>x.ReturnUrl)
    <div id="logon-dialog">
        @Html.TextBoxFor(x=>x.UserName, new {@class = "logon-input-userid",  title="Please enter a User Name",  maxlength="50", placeholder="username"})
        @Html.PasswordFor(x=>x.PassWord, new {@class = "logon-input-password",  title="Please enter a Password",  maxlength="50", placeholder="password"})
              
        <label class="checkbox">
            @Html.CheckBoxFor(x=>x.RememberMe) 
            Remember Me
        </label>

        <input id="logon-input-button" class="btn btn-primary " value="Log In" type="submit" />
    </div>
    @{ Html.EndForm(); }
</div>

<div id="error-dialog" >@Html.ValidationMessage("logonerror")</div>


@model Squawkings.Controllers.SquawkDispsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="container span12">
        <div id="header">
            <div id="global-header-text">
                Global Squawks
            </div>
            <div id="global-header-text-small">
                See everything happening right now
            </div>
        </div>
        
        <div class="post-outer rounded span12" style="margin-bottom: 15px;">
            <div style="padding: 15px;text-align: right;">
                <textarea cols="123" rows="4">This is my first squawk!</textarea>
                <input id="post-button" type="button" value="Squawk" style="margin-top: 10px;" />
            </div>
        </div>  
        
        <div class="container span12">
            @foreach (var item in Model.SquawkDisps)
            {
                <div class="post-outer rounded span12">
                    <div class="post-inner span12">
                        <div>
                            <div class="outer" style="float: left;">
                                <div class="image span1">
                                    <a href="@Url.Action("Index", new { id=0 })"><img src="../../Content/Images/@(item.AvatarUrl)" alt="View" /></a>
                                </div>
                            </div>
                            <div class="span11" style="float: left;padding-left: 10px;">
                                <div class="name">
                                    @(item.Username)
                                </div>
                                <div class="post-text">
                                    @(item.Content)
                                </div>
                                <div class="clear post-time post-time" style="padding-bottom: 10px;">
                                    @(item.Time)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
            }
        </div>
    </div>
</div>
